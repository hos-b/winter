{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-debug",
            "type": "shell",
            "command": "cd debug;rm -rf *;cmake -DCMAKE_BUILD_TYPE=Debug ..;make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd build;./gltest",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}